<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
  <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
  </div>
  <% end %>



  <div class="form-group">
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  </div>

  <div class="form-group">  
  <%= f.label :status, '詳細' %>
  <%= f.text_field :status %>
  </div>


  <%= f.submit '投稿' %>
<% end %>